<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../../../../styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.actest.admin.controller.ChatController">
    <left>
        <javafx.scene.control.TabPane prefHeight="585.0" prefWidth="360.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 0 1 0 0; -fx-min-width: 300; -fx-pref-width: 300;" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <javafx.scene.control.Tab text="Friends">
                    <VBox prefWidth="295.0" spacing="10" style="-fx-padding: 10;">
                        <Label styleClass="header-label" text="My Friends" />
                        <ListView fx:id="friendListView" prefHeight="400.0" prefWidth="400.0" VBox.vgrow="ALWAYS" />
                        <Button maxWidth="Infinity" onAction="#handleBack" styleClass="button-secondary" text="Back to Dashboard" />
                    </VBox>
                </javafx.scene.control.Tab>
                <javafx.scene.control.Tab text="Search">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <Label styleClass="header-label" text="Find Admins" />
                        <HBox spacing="5">
                            <javafx.scene.control.TextField fx:id="searchField" promptText="Name or Email..." HBox.hgrow="ALWAYS" />
                            <Button onAction="#handleSearch" styleClass="button-primary" text="Search" />
                        </HBox>
                        <ListView fx:id="searchResultListView" VBox.vgrow="ALWAYS" />
                    </VBox>
                </javafx.scene.control.Tab>
                <javafx.scene.control.Tab text="Requests">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <Label styleClass="header-label" text="Friend Requests" />
                        <ListView fx:id="requestListView" VBox.vgrow="ALWAYS" />
                    </VBox>
                </javafx.scene.control.Tab>
            </tabs>
         <cursor>
            <Cursor fx:constant="N_RESIZE" />
         </cursor>
        </javafx.scene.control.TabPane>
    </left>
    <center>
        <VBox spacing="0">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 10 0; -fx-border-color: transparent transparent #e2e8f0 transparent;">
                <Label fx:id="chatWithLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Select a friend to chat" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleVideoCall" styleClass="button-secondary" text="Video Call" />
            </HBox>
            <ScrollPane fx:id="messageScrollPane" fitToWidth="true" prefWidth="671.0" style="-fx-background-color: transparent; -fx-padding: 10;" VBox.vgrow="ALWAYS">
                <VBox fx:id="messageContainer" spacing="15" style="-fx-padding: 10;" />
            </ScrollPane>
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chat-input-area">
                <TextArea fx:id="messageInput" prefHeight="56.0" prefRowCount="1" prefWidth="423.0" promptText="Type a message..." styleClass="chat-text-area" HBox.hgrow="ALWAYS" />
                <Button onAction="#handleSend" prefHeight="40" styleClass="button-primary" text="Send" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
