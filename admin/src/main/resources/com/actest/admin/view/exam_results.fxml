<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.actest.admin.controller.ExamResultsController"
      styleClass="root">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Button text="â† Back" onAction="#handleBack" styleClass="button-secondary"/>
        <Label fx:id="examNameLabel" styleClass="header-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Export to Excel" onAction="#handleExportExcel" styleClass="button"/>
    </HBox>

    <VBox styleClass="card" VBox.vgrow="ALWAYS" style="-fx-padding: 0;">
        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <columns>
                <TableColumn fx:id="studentNameCol" text="Student Name" prefWidth="300"/>
                <TableColumn fx:id="scoreCol" text="Score" prefWidth="150"/>
                <TableColumn fx:id="focusLostCol" text="Focus Lost" prefWidth="150"/>
            </columns>
            <placeholder>
                <Label text="No results found for this exam." style="-fx-text-fill: #718096;"/>
            </placeholder>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>
