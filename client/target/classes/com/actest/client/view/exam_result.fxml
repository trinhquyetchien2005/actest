<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.actest.client.controller.ExamResultController" stylesheets="@../../../../styles.css">
    <VBox alignment="CENTER" styleClass="root" spacing="30" style="-fx-padding: 40;">
        <Label text="Exam Completed" styleClass="header-label" style="-fx-font-size: 32px;"/>
        
        <VBox styleClass="card" maxWidth="500" spacing="25" alignment="CENTER">
            <Label fx:id="examNameLabel" text="Exam Name" styleClass="sub-header-label" style="-fx-font-size: 20px;"/>
            
            <VBox alignment="CENTER" spacing="5">
                <Label text="Your Score" style="-fx-text-fill: #718096; -fx-font-size: 14px;"/>
                <Label fx:id="scoreLabel" text="8.0" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #0056b3;"/>
                <Label text="/ 10.0" style="-fx-text-fill: #718096; -fx-font-size: 16px;"/>
            </VBox>
            
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f7fafc; -fx-background-radius: 8; -fx-border-color: #edf2f7; -fx-border-radius: 8;">
                <HBox>
                    <Label text="Correct Answers" style="-fx-text-fill: #2d3748; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="correctLabel" text="8" style="-fx-text-fill: #38a169; -fx-font-weight: bold;"/>
                </HBox>
                <HBox>
                    <Label text="Incorrect Answers" style="-fx-text-fill: #2d3748; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="wrongLabel" text="2" style="-fx-text-fill: #e53e3e; -fx-font-weight: bold;"/>
                </HBox>
                <HBox>
                    <Label text="Time Taken" style="-fx-text-fill: #2d3748; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="45:00" style="-fx-text-fill: #2d3748;"/>
                </HBox>
            </VBox>
            
            <Button fx:id="reviewBtn" text="Review Answers" onAction="#handleReview" styleClass="button-secondary" maxWidth="Infinity" style="-fx-padding: 12 20; -fx-font-size: 16px;" visible="false"/>
            <Button text="Back to Dashboard" onAction="#handleBackToDashboard" styleClass="button" maxWidth="Infinity" style="-fx-padding: 12 20; -fx-font-size: 16px;"/>
        </VBox>
    </VBox>
</StackPane>
