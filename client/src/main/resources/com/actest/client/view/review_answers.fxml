<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="com.actest.client.controller.ReviewAnswersController"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/17"
        stylesheets="@../../../../styles.css">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 0, 2, 0, 0);">
            <Label text="Review Answers" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <javafx.scene.layout.Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Results" onAction="#handleBack" styleClass="button-secondary"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 20;">
            <VBox fx:id="questionsContainer" spacing="20">
                <!-- Questions will be injected here -->
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
