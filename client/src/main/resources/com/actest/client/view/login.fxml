<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.actest.client.controller.LoginController" stylesheets="@../../../../styles.css">
    <VBox alignment="CENTER" styleClass="root" spacing="20" style="-fx-padding: 20;">
        <Label text="ACTEST Client" styleClass="header-label"/>
        <VBox spacing="15" styleClass="card" maxWidth="400" alignment="CENTER">
            <Label text="Enter Your Name" styleClass="sub-header-label"/>
            <TextField fx:id="nameField" promptText="Your Name"/>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Available Servers" styleClass="sub-header-label"/>
                <Button text="Rescan" onAction="#handleRescan" styleClass="button-secondary" style="-fx-font-size: 10px; -fx-padding: 2 5;"/>
            </HBox>
            <ListView fx:id="serverListView" prefHeight="150"/>
            
            <Button text="Connect" onAction="#handleConnect" maxWidth="Infinity"/>
        </VBox>
    </VBox>
</StackPane>
